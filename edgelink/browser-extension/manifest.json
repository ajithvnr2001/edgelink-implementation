{
  "manifest_version": 3,
  "name": "EdgeLink - URL Shortener",
  "version": "1.0.0",
  "description": "Fast, powerful URL shortener. Shorten links instantly from any page. Built on Cloudflare's edge network.",
  "author": "EdgeLink Team",
  "homepage_url": "https://edgelink.io",

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "EdgeLink - Shorten URL"
  },

  "background": {
    "service_worker": "background/background.js"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "clipboardWrite"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "commands": {
    "shorten-current-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Shorten current page URL"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "edgelink@edgelink.io",
      "strict_min_version": "109.0"
    }
  }
}
