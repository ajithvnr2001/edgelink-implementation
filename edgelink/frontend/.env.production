# EdgeLink Frontend - Production Environment Variables
# Configure these values for your production deployment

# Backend API URL - Production Worker URL
# TODO: Change to https://go.shortedbro.xyz once custom domain is configured in Cloudflare Workers
NEXT_PUBLIC_API_URL=https://edgelink-production.quoteviral.workers.dev

# Frontend URL - Will be updated after Pages deployment
NEXT_PUBLIC_FRONTEND_URL=https://shortedbro.xyz

# Environment
NEXT_PUBLIC_ENVIRONMENT=production

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AB_TESTING=true
NEXT_PUBLIC_ENABLE_WEBHOOKS=true
NEXT_PUBLIC_ENABLE_TEAMS=true
NEXT_PUBLIC_ENABLE_ACCOUNT_DELETION=true

# Debug mode (MUST be false in production)
NEXT_PUBLIC_DEBUG=false

# Short URL domain (your custom domain for short links)
NEXT_PUBLIC_SHORT_URL_DOMAIN=go.shortedbro.xyz

# Optional: Analytics and monitoring
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Rate limiting display
NEXT_PUBLIC_RATE_LIMIT=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=60
